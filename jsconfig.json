{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react-native",
      "lib": ["dom", "esnext"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "noEmit": true,
      "target": "es6",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@Navigation/*": ["src/navigation/*"],
        "@Components/*": ["src/components/*"],
        "@Screens/*": ["src/screens/*"],
        "@Assets/*": ["assets/*"]
      }
    },
    "exclude": ["node_modules"]
  }